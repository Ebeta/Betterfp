<!-- MANAGE PATIENTS. LISTS OUT ALL PATIENTS. -->

<div class = "patient_list">

<% if @patients.size == 0 %>
<em> No patients found. <%= link_to "Add a new patient here", new_patient_path %>. </em>
<% end %>

    <% @patients.each do |patient| %>
        <div class = "patient-list-name"> <p><%= patient.name, @patient %></p> </div>
        <div class = "patient-list-info"><p2><%= patient.age %>, <%= patient.gender %></p2></div>
    <% end %>
</div>



