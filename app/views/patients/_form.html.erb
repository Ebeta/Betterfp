<div class = "patient-form-wrapper">

  <%= form_for @patient do |f| %>

  <% if @patient.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@patient.errors.count, "error") %> prohibited this profile from being saved:</h2>

    <ul>
      <% @patient.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class = "patient_fields">
    <p5><em>* = Required fields.</em> <br>
      To edit, type your changes and submit. All changes are automatically saved.</p5> <br>

      <%= f.label :name, "Full Name*" %><br>
      <%= f.text_field :name, value: @patient.name, id: "patient-form-fields" %><br>

      <%= f.label :age, "Age*" %><br>
      <%= f.text_field :age, value: @patient.age, id: "patient-form-fields" %><br>

      <%= f.label :gender, "Gender*" %><br>
      <%= f.text_field :gender, value: @patient.gender, id: "patient-form-fields" %><br>

      <%= f.label :email, "Email" %><br>
      <%= f.text_field :email, value: @patient.email, id: "patient-form-fields" %><br>

      <%= f.label :phone_number, "Phone Number" %><br>
      <%= f.text_field :phone_number, value: @patient.phone_number, id: "patient-form-fields" %><br>

      <%= f.label :contact, "Emergency Contact Name" %><br>
      <%= f.text_field :contact, value: @patient.contact, id: "patient-form-fields" %><br>

      <%= f.label :contact_number, "Emergency Contact Phone Number"%><br>
      <%= f.text_field :contact_number, value: @patient.contact_number, id: "patient-form-fields" %><br>
  </div>
</div>

